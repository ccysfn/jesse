<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="soft_list">
      <field name="name">jyinspur list</field>
      <field name="model">jyinspur.soft</field>
      <field name="arch" type="xml">
	     <form>
		 <header>
		 <button name='confirm' string='提交' states="draft" type="object"/>
		 <button name='cancle_confirm' string='取消提交' states="done" type="object"/>
		 <button name='done' string='审批通过' states="processing" type="object"/>
		 <button name='no_pass' string='审批不通过' states="processing" type="object"/>
		    <field name="state" widget="statusbar" statusbar_visible="draft,processing,done" readonly="1"/>
		 </header> 
        <sheet>
		<group>
		  <group>
          <field name="name"/>
          <field name="ggxh"/>
          <field name="soft_type"/> 
          </group>
          <group>		  
          <field name="price"/>
          <field name="jldw"/>  
          <field name="description"/>
          <field name="qm"/>
		  </group>
		  </group>
        </sheet>
		</form>
      </field>
    </record>
    
	 <record id="product_tree" model="ir.ui.view">
            <field name="name">product.tree</field>
            <field name="model">jyinspur.soft</field>
            <field name="arch" type="xml">
                <tree string="soft Order">
				     <field name="name"/>
          <field name="ggxh"/>
          <field name="soft_type"/> 
			<field name="price"/>
          <field name="jldw"/>  
          <field name="description"/>
          <field name="qm"/>
           <field name="state"/>		  
                </tree>
            </field>
        </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="soft_action_window">
      <field name="name">jyinspur soft</field>
      <field name="res_model">jyinspur.soft</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    

    

    <!-- Top menu item -->

    <!-- menu categories -->
    

    <!-- actions -->
    
    <menuitem name="soft" id="jyinspur_menu_1_soft" parent="jyinspur_menu_root"
              action="soft_action_window"/>
 
    
  </data>
</odoo>